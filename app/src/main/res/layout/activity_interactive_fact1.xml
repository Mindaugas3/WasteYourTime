<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fact"
    android:background="@drawable/debesys">

    <ScrollView
        android:background="@drawable/debesys"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/returnbutton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/returnB"
                android:background="@drawable/returnbutton" />

            <ImageButton
                android:id="@+id/menubutton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="350dp"
                android:layout_marginStart="345dp"
                android:contentDescription="@string/menuB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/menubutton" />


            <ImageButton
                android:id="@+id/like"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="275dp"
                android:layout_marginStart="275dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/zvaigzde"
                android:contentDescription="@string/fav"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/klausimasIsDuombazes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Klausimas klausima klausimas klausimas klausimas klausimas klausimas?"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    app:fontFamily="@font/amatica_sc_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pav1"
                        android:layout_width="200dp"
                        android:layout_height="241dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:paddingStart="25dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        app:srcCompat="@drawable/test2" />

                    <ImageView
                        android:id="@+id/pav2"
                        android:layout_width="200dp"
                        android:layout_height="241dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:paddingTop="30dp"
                        android:paddingLeft="30dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        app:srcCompat="@drawable/test3" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/atsakymas1"
                    android:layout_width="170dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_stroke"
                    android:text="Pirmas atsakymas"
                    android:textSize="40sp"
                    app:fontFamily="@font/amatica_sc_bold" />

                <Button
                    android:id="@+id/atsakymas2"
                    android:layout_width="170dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_stroke"
                    android:text="Antras atsakymas"
                    android:textSize="40sp"
                    app:fontFamily="@font/amatica_sc_bold" />

            </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>